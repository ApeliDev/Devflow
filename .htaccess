RewriteEngine On

# Set the base directory if your app is in a subfolder
# RewriteBase /your-subfolder/

# If the request is for a real file or directory, don't rewrite
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Redirect explicitly requested index.php to root
RewriteRule ^index\.php$ / [R=301,L]

# Rewrite clean URLs to .php files
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]
